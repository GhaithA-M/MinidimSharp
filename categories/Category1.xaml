<UserControl x:Class="MinidimSharp.Category1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto"
             Background="#000000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Tilføj Forbruger / Belastning" Click="AddLoad_Click"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <UniformGrid x:Name="LoadEntriesPanel" Rows="5" Columns="4">
                <!-- Load entries will be added here [A] [Ω] [W] -->
                <!-- Each entry should be wrapped with a Border for the dark lines -->
                <!-- <Border BorderBrush="DarkGray" BorderThickness="1"> -->
                <!--     <YourItem /> -->
                <!-- </Border> -->
            </UniformGrid>
        </ScrollViewer>
        <Label Grid.Row="2" Content="Samlet Værdi [A]:"/>
        <TextBox Grid.Row="3" x:Name="Result"/>
    </Grid>
</UserControl>